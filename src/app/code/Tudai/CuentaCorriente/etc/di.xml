<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <type name="Tudai\CuentaCorriente\Logger\Handler\System">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>

    <type name="Tudai\CuentaCorriente\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">TUDAI LOGGER</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Tudai\CuentaCorriente\Logger\Handler\System</item>
            </argument>
        </arguments>
    </type>

    <type name="Tudai\CuentaCorriente\Plugin\AfterSave">
        <arguments>
            <argument name="logger" xsi:type="object">\Tudai\CuentaCorriente\Logger\Logger</argument>
        </arguments>
    </type>

    <type name="Tudai\CuentaCorriente\Observer\AdminhtmlCustomerSaveAfter">
        <arguments>
            <argument name="logger" xsi:type="object">\Tudai\CuentaCorriente\Logger\Logger</argument>
        </arguments>
    </type>

</config>